    "@types/multer": "^1.4.11",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.7.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@mui/icons-material": "^5.15.16",
    "@tanstack/react-query-devtools": "^5.39.0"
